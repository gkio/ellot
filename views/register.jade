extends layout

block content
  .container
    h1 Register Page
    p.lead Say something worthwhile here.
    br
    form(role='form', action="/register",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="name", placeholder='Name')
      .form-group
          input.form-control(type='text', name="lastname", placeholder='Lastname')
      .form-group
          input.form-control(type='text', name="username", placeholder='Enter Username')
      .form-group
        input.form-control(type='password', name="password", placeholder='Password')
      .form-group
          input.form-control(type='text', name="age", placeholder='Age')
      .form-group
          input.form-control(type='text', name="country", placeholder='Country')
      .form-group
          input.form-control(type='text', name="city", placeholder='City')
      .form-group
          input.form-control(type='text', name="phone", placeholder='Phone number')
      button.btn.btn-default(type='submit') Submit
      &nbsp;
      a(href='/')
        button.btn.btn-primary(type="button") Cancel